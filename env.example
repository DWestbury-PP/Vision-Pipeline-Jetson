# Environment Configuration

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Camera Configuration  
CAMERA_TYPE=jetson_csi  # jetson_csi, mac_studio, usb
CAMERA_INDEX=0  # CSI sensor ID (0 or 1 for stereo)
CAMERA_WIDTH=1920
CAMERA_HEIGHT=1080
CAMERA_FPS=30
CSI_SENSOR_MODE=0  # 0=3280x2464, 1=1920x1080, 2=1640x1232, 3=1280x720

# YOLO Configuration
YOLO_MODEL=yolo11n.pt
YOLO_CONFIDENCE=0.5
YOLO_DEVICE=cuda  # cuda for NVIDIA Jetson, cpu

# Moondream Configuration
MOONDREAM_MODEL=vikhyatk/moondream2
MOONDREAM_DEVICE=cuda  # cuda for NVIDIA Jetson, cpu
MOONDREAM_INSTANCES=1  # Reduced for Jetson memory constraints
MOONDREAM_BATCH_SIZE=1

# Pipeline Configuration
VLM_FRAME_STRIDE=10  # Process every Nth frame with VLM
YOLO_FRAME_STRIDE=1  # Process every Nth frame with YOLO
ENABLE_SCENE_CHANGE_DETECTION=true
SCENE_CHANGE_THRESHOLD=0.3

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
WEBSOCKET_PORT=8001

# Frontend Configuration
FRONTEND_PORT=3000
API_BASE_URL=http://localhost:8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# Performance Configuration
MAX_QUEUE_SIZE=10
UI_RING_BUFFER_SIZE=3
ENABLE_PERFORMANCE_METRICS=true

# Docker Configuration
COMPOSE_PROJECT_NAME=vision-pipeline-jetson

# Jetson-Specific Configuration
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=all
